<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/background"
	android:orientation="vertical"
	android:foreground="?android:attr/selectableItemBackground"
	android:paddingTop="8dp"
	android:paddingBottom="8dp"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			>

			<ImageView
				android:id="@+id/imgBoxOffice"
				android:layout_width="90dp"
				android:layout_height="0dp"
				android:scaleType="centerCrop"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintDimensionRatio="h,3:4"
				/>
		</androidx.constraintlayout.widget.ConstraintLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:paddingLeft="10dp"
			>

			<TextView
				android:id="@+id/txtMovieName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:textSize="16sp"
				/>

			<LinearLayout
				android:id="@+id/lytWeekend"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/txtMovieName"
				android:orientation="horizontal"
				android:paddingTop="10dp"
				>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Weekend:"
					android:textColor="@color/white"
					android:textSize="14dp"
					/>

				<TextView
					android:id="@+id/txtWeekend"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5dp"
					android:text="Weekend:"
					android:textColor="@color/white"
					android:textSize="14dp"
					/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/lytGross"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/lytWeekend"
				android:orientation="horizontal"
				android:paddingTop="10dp"
				>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Gross:"
					android:textColor="@color/white"
					android:textSize="14dp"
					/>

				<TextView
					android:id="@+id/txtGross"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5dp"
					android:text="Weekend:"
					android:textColor="@color/white"
					android:textSize="14dp"
					/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/lytWeek"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/lytGross"
				android:orientation="horizontal"
				android:paddingTop="10dp"
				>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Week Since Release:"
					android:textColor="@color/white"
					android:textSize="14dp"
					/>

				<TextView
					android:id="@+id/txtWeek"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5dp"
					android:text="Weekend:"
					android:textColor="@color/white"
					android:textSize="14dp"
					/>

			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>